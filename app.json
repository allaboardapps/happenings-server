{
  "name": "happenings-server",
  "description": "Happenings Server (Ruby on Rails, JavaScript, Postgres, Redis, ElasticSearch)",
  "website": "https://happenings-server-production.herokuapp.com",
  "repository": "https://github.com/allaboardapps/happenings-server",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "stack": "cedar-14",
  "env": {
    "DB_POOL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAILTRAP_PASSWORD": {
      "required": true
    },
    "MAILTRAP_USERNAME": {
      "required": true
    },
    "MAX_THREADS": {
      "required": true
    },
    "MIN_THREADS": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "ROLLBAR_ACCESS_TOKEN": {
      "required": true
    },
    "ROLLBAR_CLIENT_TOKEN": {
      "required": true
    },
    "ROLLBAR_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "WEB_CONNCURRENCY": {
      "required": true
    },
    "CDN_HOSTNAME": {
      "required": true
    },
    "SEARCHBOX_SSL_URL": {
      "required": true
    },
    "SEARCHBOX_URL": {
      "required": true
    },
    "ELASTICSEARCH_URL": {
      "required": true
    },
    "REVIEW_APPLICATION": {
      "description": "Indicate that this installation is a Heroku Review App",
      "value": "true"
    },
    "CDN": {
      "value": "us-east-1"
    },
    "CDN_HOSTNAME": {
      "value": "us-east-1"
    }
  },
  "environments": {
    "test": {
      "env": {
        "SECRET_TOKEN": "test-secret"
      },
      "scripts": {
        "test": "bundle exec rspec",
        "test": "rubocop ."
      }
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby"
    },
    "worker": {
      "quantity": 1,
      "size": "hobby"
    }
  },
  "addons": [
    "autobus",
    "deadmanssnitch",
    "heroku-postgresql",
    "heroku-redis",
    "mailtrap",
    "papertrail",
    "rollbar",
    "scheduler",
    "scout",
    "searchbox"
  ],
  "buildpacks": [
    {
        "url": "heroku/ruby"
    }
  ]
}
